datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  idUser    Int      @id @default(autoincrement())
  email     String?
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [idRole])
}

model Role {
  idRole    Int        @id @default(autoincrement())
  nameRole  String     @unique
  roleMenus RoleMenu[]
  users     User[]
}

model Menu {
  idMenu    Int        @id @default(autoincrement())
  nameMenu  String     @unique
  roleMenus RoleMenu[]
}

model RoleMenu {
  idRoleMenu Int  @id @default(autoincrement())
  roleId     Int
  menuId     Int
  role       Role @relation(fields: [roleId], references: [idRole])
  menu       Menu @relation(fields: [menuId], references: [idMenu])
}
